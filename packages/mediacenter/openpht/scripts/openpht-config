# hack: make addon-bins executable
# done in openpht on addon install. but just in case..
chmod +x /storage/.openpht/addons/*/bin/*

# hack: update RSSnews.xml in userdata
if [ -f /storage/.openpht/userdata/RssFeeds.xml ]; then
  sed -e "s,http://libreelec.tv/news?format=feed&type=rss,http://feeds.libreelec.tv/news,g" \
      -i /storage/.openpht/userdata/RssFeeds.xml
fi

# setup OpenPHT sources
if [ ! -f $HOME/.openpht/userdata/sources.xml ]; then
  if [ -f /usr/share/openpht/config/sources.xml ]; then
    cp /usr/share/openpht/config/sources.xml $HOME/.openpht/userdata
  fi
fi

# common setup guisettings
if [ ! -f $HOME/.openpht/userdata/guisettings.xml ] ; then
  if [ -f /usr/share/openpht/config/guisettings.xml ]; then
    cp /usr/share/openpht/config/guisettings.xml $HOME/.openpht/userdata
  fi
fi

OPENPHT_ARGS="--lircdev /run/lirc/lircd"

echo "OPENPHT_ARGS=\"$OPENPHT_ARGS\"" > /run/libreelec/openpht.conf

if [ "$(uname -m)" = "x86_64" -o "$(uname -m)" = "aarch64" ]; then
  echo "MALLOC_MMAP_THRESHOLD_=524288" >> /run/libreelec/openpht.conf
  echo "MALLOC_TRIM_THRESHOLD_=1048576" >> /run/libreelec/openpht.conf
  echo "MALLOC_ARENA_TEST=2" >> /run/libreelec/openpht.conf
fi
